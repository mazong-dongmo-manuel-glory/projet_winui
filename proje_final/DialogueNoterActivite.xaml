<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="proje_final.DialogueNoterActivite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:proje_final"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Donner une note à l'activité"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    CloseButtonClick="ContentDialog_CloseButtonClick"
    PrimaryButtonText="Soumettre"
    CloseButtonText="Annuler"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBlock Text="Veuillez donner une note sur 20 pour cette activité :" Margin="0,0,0,10"/>
        <Slider x:Name="sliderNote"
                Minimum="1"
                Maximum="20"
                Value="1"
                TickFrequency="1"
                TickPlacement="Outside"
                IsThumbToolTipEnabled="True"/>
    </StackPanel>
</ContentDialog>
